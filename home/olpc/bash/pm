while [ True ]
BL=$(xoset q)
do
	if [ $BL == $(xoset q) ]
	then
		if [ $(xoset p) == 1 ]
		then
			xoset b $BL
		elif [ $(xoset p) == 0 ]
		then
			xoset b $[ $BL-5 ]
		fi
	elif [ $BL != $(xoset q) ]
	then
		if [ $(xoset p) == 1 ]
		then
			xoset b $BL
		elif [ $(xoset p) == 0 ]
		then
			xoset b $[ $BL-5 ]
		fi
	fi
done
